      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto mb-2 mb-lg-0">

        <%# <li class="nav-ite active">
          <%= link_to "Articles", articles_path, class: "nav-link"  %>
        <%# </li>  "After adding link_to on dropdown class this line is not needed" %>

        <li class="nav-item">
          <%= link_to "Bloggers", users_path, class: "nav-link" %>
        </li>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">Articles</a>
          <ul class="dropdown-menu">
            <% if logged_in? %>
              <%= link_to "Create new article", new_article_path, class: "dropdown-item" %>
            <% end %>
            <li><hr class="dropdown-divider"></li>
            <%= link_to "View articles", articles_path, class: "dropdown-item" %>
          </ul>
        </li>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
            Categories
          </a>
          <ul class="dropdown-menu">
            <% if logged_in? && current_user.admin? %>
              <%= link_to "Create new article", new_category_path, class: "dropdown-item" %>
              <li><hr class="dropdown-divider"></li>
            <% end %>
            <%= link_to "View categories", categories_path, class: "dropdown-item" %>
          </ul>
        </li>

